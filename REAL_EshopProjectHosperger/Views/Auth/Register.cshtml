@using REAL_EshopProjectHosperger.Models.Auth
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MessageType"] mt-2">
        @TempData["Message"]
    </div>
}

<div>
    <h1 style="text-align:center; font:500; font-size:xx-large; margin-bottom:20px;">Registrace</h1>

</div>

<form asp-action="Register" class="mt-2 mb-2">
    <div class="row justify-content-center mb-2">
        <label asp-for="Username" class="col-sm-1 col-form-label">Username</label>
        <div class="col-sm-4">
            <input asp-for="Username" type="text" class="form-control">
            <span asp-validation-for="Username" class="text-danger xinvalid-feedback"></span>
        </div>
    </div>
    <div class="row justify-content-center mb-2">
        <label asp-for="Password" class="col-sm-1 col-form-label">Password</label>
        <div class="col-sm-4">
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger xinvalid-feedback"></span>
        </div>
    </div>
    <div class="row justify-content-center mb-2">
        <label asp-for="Password" class="col-sm-1 col-form-label">firstname</label>
        <div class="col-sm-4">
            <input asp-for="Firstname" type="text" class="form-control">
            <span asp-validation-for="Firstname" class="text-danger xinvalid-feedback"></span>
        </div>
    </div>
    <div class="row justify-content-center mb-2">
        <label asp-for="Password" class="col-sm-1 col-form-label">Lastname</label>
        <div class="col-sm-4">
            <input asp-for="Lastname" type="text" class="form-control">
            <span asp-validation-for="Lastname" class="text-danger xinvalid-feedback"></span>
        </div>
    </div>
    <div class="row justify-content-center mb-2">
        <label asp-for="Email" class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-4">
            <input asp-for="Email" type="text" class="form-control">
            <span asp-validation-for="Email" class="text-danger xinvalid-feedback"></span>
        </div>
    </div>
    
    <div class="row justify-content-center mb-2">
        <div class="col-5">
            <button type="submit" class="btn btn-sm btn-primary w-100">
                Register
            </button>
        </div>
    </div>
    <div class="row justify-content-center mb-2">
        <a  href="/Auth/Login"><p style="align-content:center; font:300;">Už máte svůj účet?</p></a>
    </div>
    
</form>

