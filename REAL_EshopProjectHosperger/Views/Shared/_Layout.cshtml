<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoZoom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/REAL_EshopProjectHosperger.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="/Home/Index"><img src="/img/logo.png" alt="AutoZoomLogo"  style="height:75px; width:75px; margin:10px;"/></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AutoZoom</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Filter">Filter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Brand" asp-action="ListBrand">Brands</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Car" asp-action="List">Cars</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        


                        @if (ViewBag.IsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="navbar-text me-3">Logged in as @ViewBag.Username [@ViewBag.Role]</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-dark" asp-controller="Car" asp-action="Cart" style="margin-right:10px;">Košík</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" asp-controller="Auth" asp-action="Logout" style="margin-right:10px;">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-dark" asp-controller="Car" asp-action="Cart" style="margin-right:10px;">Košík</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Auth" asp-action="Login" style="margin-right:10px;">Login</a>
                            </li>
                        }
                        

                        <li class="nav-item">
                            <a style="color:white;" class="btn btn-info" asp-controller="Auth" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AutoZoom - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
